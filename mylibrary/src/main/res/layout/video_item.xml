<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingBottom="5dp"
    tools:context="so.bubu.cityguide.sydney.dynamic.ui.TravelsFragment">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
        android:id="@+id/fl_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_select_bg">

            <ImageView
                android:id="@+id/iv_hot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_no_img"
                android:layout_width="@dimen/icon_no_img_empty_img"
                android:layout_height="@dimen/icon_no_img_empty_img"
                android:layout_gravity="center" />

        </FrameLayout>

        <View
            android:id="@+id/vw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_main_img"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/video_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_play_96"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:text="title"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="false"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_above="@+id/video_play"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
